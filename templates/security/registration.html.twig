{% extends "base.html.twig" %}
{% block title %}
    {{ appName }}
    |
    {{ title }}
{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom', 'attr': {'placeholder': 'Nom'}})}}
    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Email'}})}}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}})}}
    {{ form_row(form.confirm_password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}})}}
    {{ form_row(form.avatar, {'label': 'Avatar','attr': {'placeholder': 'Avatar'}})}}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}